<resources>

    <!-- Base application theme. --><style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/white</item>
</style>

    <style name="txt">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="txt.blue">
        <item name="android:textColor">@color/primaryDark</item>
    </style>

    <style name="cb">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLength">22</item>
        <item name="android:buttonTint">@color/white</item>
    </style>
    <style name="cb.blue">
        <item name="android:textColor">@color/primaryDark</item>
        <item name="android:buttonTint">@color/primaryDark</item>
    </style>
    <style name="searchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/white</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/white</item>
    </style>

</resources>
